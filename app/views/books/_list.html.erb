<!-- 部分テンプレート -->


<div class="container px-5 px-sm-0">
  <div class="user-info">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag user.get_profile_image(100, 100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(user), class: "btn btn-info btn-sm btn-block sm-3" do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
    <!-- エラーメッセージの表示 -->
    <div class="book-new">
      <%= form_with model: book do |f| %>
      <h2>NewBook</h2>
      <% if book.errors.any? %>
        <%= book.errors.count %>errors
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

        <h4>title</h4>
          <%= f.text_field :title %>
        <h4>Opinion</h4>
          <%= f.text_area :body %>
          <br>
          <%= f.submit "Create Book" %>
          <% end %>
    </div>
  </div>