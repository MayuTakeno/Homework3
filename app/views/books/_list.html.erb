<!-- 部分テンプレート -->

<div class="book-sidebar">

  <h2>User info</h2>
  <div class="user-info">
    <%= image_tag user.get_profile_image(100, 100) %>
    <table class="table">
      <tbody>
        <tr>
          <th></th>
          <th class="prepare-name">name</th>
          <th class="prepare-output-name"><%= user.name %></th>
        </tr>
        <tr>
          <th></th>
          <th class="prepare-introduction">introduction</th>
          <th class="prepare-introduction-output"><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block md-3" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

  <div class="row">
    <!-- エラーメッセージの表示 -->
    <div class="book-new">
    <%= form_with model: book do |f| %>
      <h2>New book</h2>
      <% if book.errors.any? %>
      <%= book.errors.count %>errors
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>

      <h4>title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
        <br>
        <%= f.submit "Create Book" %>
      <% end %>
    </div>
  </div>

</div>