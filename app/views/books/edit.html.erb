<!-- 投稿編集画面 -->

<div class="book-edit">
  <div class="container">
    <div class="row">


      <div class="mx-auto">
      <h1>Editing Book</h1>
        <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

          <% if @book.errors.any? %>
          <%= @book.errors.count %>errors
            <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>

          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <br>
          <%= f.submit 'Update Book', class: "btn btn-success" %>

        <% end %>

        <div class="link">
          <%= link_to "Show", book_path(@book.id) %>
          <%= link_to "Back", books_path %>
        </div>

      </div>
    </div>
  </div>

</div>