<main>
  <table>
    <thead>
      <tr>
        <th class="table-title">Title</th>
        <th class="table-body">Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td class="profile-image"><%= image_tag book.user.get_profile_image(100, 100) %></td>
        <td class="book2-title"><%= link_to book.title, "/books/#{book.id}" %></td>
        <td class="book2-body"><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
    </div>
  </table>

  <%= render 'list', book: @book, user: @user %>
</main>
