<!-- 投稿一覧画面 -->

<!-- サクセスメッセージの表示 -->
<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<!-- blogbarクラス -->
<div class="blogbar">

  <!-- bootstrap使用宣言 -->
  <div class="container px-5">
    <div class="row">

      <!-- 部分テンプレートの参照-->
      <div class="col-md-3">
        <%= render 'list', book: @book, user: @user %>
      </div>
      <!-- 参照終了 -->

      <!-- カラム８とオフセット一つ分 -->
      <div class="col-md-8 offset-md-1">

        <h2>Books</h2>
        <!-- books/一覧テーブルの生成 -->
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th class="table-title">Title</th>
              <th class="table-body">Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td class="profile-image"><%= image_tag book.user.get_profile_image(100, 100) %></td>
              <td class="book2-title"><%= link_to book.title, "/books/#{book.id}" %></td>
              <td class="book2-body"><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>

    </div>
  </div>
</div>

