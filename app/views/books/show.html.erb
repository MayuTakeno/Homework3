<!-- 投稿詳細画面 -->

<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

   <div class="blogbar">
      <div class="container px-5">
        <div class="row">

          <div class="col-md-3">
            <%= render 'list', book: @book_new, user: @user %>
          </div>

          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>

            <table class="table">
              <thead>
                <tr>
                  <th></th>
                  <th class="detail-table-title">Title</th>
                  <th class="detail-table-body">Opinion</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="detail-image">
                    <%= image_tag @book.user.get_profile_image(100, 100) %><br>
                    <%= link_to @book.user.name, user_path(@book.user.id) %>
                  </td>
                  <td class="detail-title"><%= @book.title %></td>
                  <td class="detail-body"><%= @book.body %></td>
                  <% if @book.user == current_user %>
                    <td><%= link_to 'Edit', edit_book_path, class: "btn btn-sm btn-success" %></td>
                    <td><%= link_to 'Destroy', book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                  <% end %>
                </tr>
              </tbody>
            </table>

          </div>
        </div>
      </div>
   </div>
