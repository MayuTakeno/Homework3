<!-- ユーザ編集画面 -->

<div class="user-edit">
  <div class="container">
    <div class="row">
      <div class="mx-auto center">
      <%= form_with model: @user, url: update_user_path(@user.id), method: :patch do |f| %>

        <h1>User info</h1>
        <div class="InputName">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        </div>
        <div class="InoutIntroduction"><br>
          <label for="inputIntroduction">Introduction</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介" %>
        </div>
        <div class="InputImage">
          <label for="inputImage">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/no_image.jpg" %>
        </div>

        <%= f.submit "Upload User" %>

        <% end %>

      </div>
    </div>
  </div>
</div>