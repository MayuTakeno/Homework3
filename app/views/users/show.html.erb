<!-- ユーザ詳細画面 -->

<!-- サクセスメッセージの表示 -->
<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<!-- user-showクラス -->
<div class="user-show">

  <!-- bootstrap使用宣言 -->
  <div class="container px-5">
    <div class="row">

      <!-- 部分テンプレート参照 -->
      <div class="col-md-3">
        <%= render 'books/list', book: @book, user: @user %>
      </div>
      <!-- 参照終了 -->

      <!-- カラム８とオフセット一つ分 -->
      <div class="col-md-8 offset-md-1">

        <h1>Books</h1>

        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th class="user-show-title">Title</th>
              <th class="user-show-body">Opinion</th>
            </tr>
          </thead>
          <tbody class="users-show-tbody">
          <!-- eachでbooksに格納されているデータを一つずつ取り出す -->
          <% @books.each do |book| %>
            <tr>
              <td class="prof-image">
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image(100, 100) %>
                <% end %>
                </td>
              <td class="book2-title"><%= link_to book.title, book_path(book.id) %></td>
              <td class="book2-body"><%= book.body %></td>
              <% end %>
            </tr>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

