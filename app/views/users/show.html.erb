<h1>Books</h1>
<tabole class="users-show-table">
  <thead>
    <th colspan="3"></th>
    <th class="user-show-title">Title</th>
    <th class="user-show-body">Opinion</th>
  </thead>
</tabole>
<tbody class="users-show-tbody">
 <!-- eachでbooksに格納されているデータを全て取り出す -->
<% @books.each do |book| %>
  <tr>
    <td class="prof-image"><%= image_tag @user.get_profile_image(100, 100) %></td>
    <td class="book2-title"><%= link_to book.title, book_path(book.id) %></td>
    <td class="book2-body"><%= book.body %></td>
  </tr>
</tbody>
<% end %>

 <%= render 'books/list', book: @book, user: @user %>

